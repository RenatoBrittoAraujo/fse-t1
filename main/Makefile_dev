CC=gcc
TARGET=main_dev
SRCEXT=c
LIB=

INC=-I ../shared/inc -I inc 
BUILDDIR=obj
SRCDIR=src
SHARED_BUILDDIR=../shared/obj
SHARED_SRCDIR=../shared/src
SOURCES=$(shell find $(SRCDIR) -type f -name *.$(SRCEXT))
OBJECTS=$(patsubst $(SRCDIR)/%,$(BUILDDIR)/%,$(SOURCES:.$(SRCEXT)=.o))
SHARED_SOURCES=$(shell find $(SHARED_SRCDIR) -type f -name *.$(SRCEXT))
SHARED_OBJECTS=$(patsubst $(SHARED_SRCDIR)/%,$(SHARED_BUILDDIR)/%,$(SHARED_SOURCES:.$(SRCEXT)=.o))

include ../.env
export $(shell sed 's/=.*//' ../.env)

$(SHARED_BUILDDIR)/%.o: $(SHARED_SRCDIR)/%.$(SRCEXT)
	make -f ../shared/Makefile -C ../shared dev 

$(TARGET): $(SHARED_OBJECTS) $(OBJECTS)
	@echo hey_1! $@ $^
	@echo " $(CC) $(INC) $^ -o $(TARGET) $(LIB)"; $(CC) $(INC) $^ -o $(TARGET) $(LIB)

$(BUILDDIR)/%.o: $(SRCDIR)/%.$(SRCEXT)
	@echo hey_2! $@ $<
	@echo " $(CC) $(INC) -c -o $@ $<"; 
	$(CC) $(INC) -c -o $@ $<

pid_run:
	sh -c 'echo $$; exec $(EXEC)'

run: 
	$(shell sed '' ../.env)  ./$(TARGET)

clean:
	@echo " find . -type f -name '*.o' -delete"; find . -type f -name '*.o' -delete 2>/dev/null || true
	@echo " rm ./$(TARGET)"; rm ./$(TARGET) 2>/dev/null || true
